@model IEnumerable<UploadImages.Models.UploadImage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFile)
            </th>
            <th>
                @Html.LabelForModel("Imagem")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageFile)
            </td>
            <td>  
                @if (!String.IsNullOrEmpty(item.ImageFile))
                {
                    <img src="~/@item.ImageFile" alt="@item.ImageFile" style="width:100px;height:50px;max-width: 100%" class="img-thumbnail" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ImageId" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ImageId" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ImageId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
